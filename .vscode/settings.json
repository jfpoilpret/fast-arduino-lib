{
    "files.exclude": {
        "**/.git": true,
        "apidoc": true,
        "build": true,
        "deps": true,
        "dist": true,
        "docs": true,
        "example-boards": true
    },
    "files.insertFinalNewline": true,
    "editor.insertSpaces": false,
    "editor.rulers": [
        80,
        120
    ],
    "editor.tabSize": 4,
    "editor.autoIndent": true,
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.autocomplete": "Default",
    "C_Cpp.intelliSenseEngine": "Default",
    "todohighlight.include": ["**/*.h","**/*.cpp"],
    "todohighlight.keywords": [
        "TODO",
        "FIXME"
    ],
    "todohighlight.maxFilesForSearch": 512,
    "todohighlight.toggleURI": false,
    "fastarduino.general": {
        "defaultTarget": "UNO"
    },
    "fastarduino.targets": {
        "UNO": {
            "board": "Arduino UNO",
            "programmer": "UNO USB",
            "serial": "/dev/ttyACM0"
        },
        "NANO": {
            "board": "Arduino NANO",
            "programmer": "NANO USB",
            "serial": "/dev/ttyUSB0"
        },
        "MEGA": {
            "board": "Arduino MEGA",
            "programmer": "MEGA USB",
            "serial": "/dev/ttyACM0"
        },
        "LEONARDO": {
            "board": "Arduino LEONARDO",
            "programmer": "LEONARDO USB",
            "serial": "/dev/ttyACM0"
        },
        "ATmega328-16MHz":
        {
            "board": "ATmega328",
            "frequency": 16,
            "programmer": "ArduinoISP.cc"
        },
        "ATmega328-8MHz":
        {
            "board": "ATmega328",
            "frequency": 8,
            "programmer": "ArduinoISP.cc"
        },
        "ATtiny84-8MHz":
        {
            "board": "ATtinyX4",
            "frequency": 8,
            "programmer": "ArduinoISP.cc"
        },
        "ATtiny85-8MHz":
        {
            "board": "ATtinyX5",
            "frequency": 8,
            "programmer": "ArduinoISP.cc",
            "fuses": 
            {
                "hfuse": "0xDD",
                "lfuse": "0xE2",
                "efuse": "0xFF"
            }
        }
    },
    "terminal.integrated.scrollback": 5000
}

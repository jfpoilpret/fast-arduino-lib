{
    "files.exclude": {
        "**/.git": true,
        ".vscode/ipch": true,
        "apidoc": true,
        "build": true,
        "deps": true,
        "dist": true,
        "docs": true,
        "example-boards": true,
        "refs": true
    },
    "files.watcherExclude": {
        "**/.git": true,
        ".vscode/ipch": true,
        "apidoc": true,
        "build": true,
        "deps": true,
        "dist": true,
        "docs": true,
        "example-boards": true,
        "refs": true
    },
    "files.insertFinalNewline": true,
    "editor.insertSpaces": false,
    "editor.rulers": [
        80,
        120
    ],
    "editor.tabSize": 4,
    "editor.autoIndent": "full",
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.autocomplete": "Default",
    "C_Cpp.intelliSenseEngine": "Default",
    "todohighlight.include": ["**/*.h","**/*.cpp"],
    "todohighlight.keywords": [
        "TODO",
        "FIXME"
    ],
    "todohighlight.maxFilesForSearch": 512,
    "todohighlight.toggleURI": false,
    "fastarduino.general": {
        "defaultTarget": "UNO"
    },
    "fastarduino.targets": {
        "UNO": {
            "board": "Arduino UNO",
            "programmer": "UNO USB",
            "serial": "/dev/ttyACM0"
        },
        "UNO-ISP": {
            "board": "Arduino UNO",
            "programmer": "ArduinoISP.cc"
        },
        "UNO-TinyISP": {
            "board": "Arduino UNO",
            "programmer": "USBtinyISP"
        },
        "NANO": {
            "board": "Arduino NANO",
            "programmer": "NANO USB",
            "serial": "/dev/ttyUSB0"
        },
        "NANO-ISP": {
            "board": "Arduino NANO",
            "programmer": "ArduinoISP.cc"
        },
        "MEGA": {
            "board": "Arduino MEGA",
            "programmer": "MEGA USB",
            "serial": "/dev/ttyACM0"
        },
        "LEONARDO": {
            "board": "Arduino LEONARDO",
            "programmer": "LEONARDO USB",
            "serial": "/dev/ttyACM0"
        },
        "ATmega328-16MHz":
        {
            "board": "ATmega328",
            "frequency": 16,
            "programmer": "ArduinoISP.cc"
        },
        "ATmega328-8MHz":
        {
            "board": "ATmega328",
            "frequency": 8,
            "programmer": "ArduinoISP.cc"
        },
        "ATmega644-16MHz":
        {
            "board": "ATmega644",
            "frequency": 16,
            "programmer": "ArduinoISP.cc",
            "fuses": 
            {
                "hfuse": "0xD8",
                "lfuse": "0xF7",
                "efuse": "0xFD"
            }
        },
        "ATmega1284-16MHz":
        {
            "board": "ATmega1284",
            "frequency": 16,
            "programmer": "ArduinoISP.cc",
            "fuses": 
            {
                "hfuse": "0xD8",
                "lfuse": "0xF7",
                "efuse": "0xFD"
            }
        },
        "ATtiny84-8MHz":
        {
            "board": "ATtinyX4",
            "frequency": 8,
            "programmer": "ArduinoISP.cc"
        },
        "ATtiny85-8MHz":
        {
            "board": "ATtinyX5",
            "frequency": 8,
            "programmer": "ArduinoISP.cc",
            "fuses": 
            {
                "hfuse": "0xDD",
                "lfuse": "0xE2",
                "efuse": "0xFF"
            }
        }
    },
    "terminal.integrated.scrollback": 5000,
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "files.associations": {
        "**/*.yml": "ansible",
        "cstdint": "cpp",
        "*.tcc": "cpp",
        "fstream": "cpp"
    },
    "cSpell.enabled": false,
    "cmake.configureOnOpen": false
}

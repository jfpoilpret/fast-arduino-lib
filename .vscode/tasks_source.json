{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Generate Documentation",
            "type": "shell",
            "command": "make doco",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Clean all examples",
            "type": "shell",
            "command": "make clean-examples ${FA_MAKE_OPTIONS}",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Build all examples",
            "type": "shell",
            "command": "make examples ${FA_MAKE_OPTIONS}",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [ "$avrgcc" ]
        }
    ]
}
